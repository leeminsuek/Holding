<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom Shadow -->
    <item>
        <shape android:shape="oval" >
            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="2dp"
                android:top="0dp" />

            <gradient
                android:centerColor="#FF5555"
                android:endColor="#00000000"
                android:gradientRadius="24"
                android:startColor="#FF000000"
                android:type="radial" >
            </gradient>
        </shape>
    </item>

    <!-- White Top color -->
    <item>
        <shape android:shape="oval" >
            <solid android:color="#77FF0000" />

            <size
                android:height="24dp"
                android:width="24dp" />
        </shape>
    </item>

</layer-list>