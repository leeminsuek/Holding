<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrond" >

    <!-- TITLE BAR -->

    <RelativeLayout
        android:id="@+id/rl_s00120_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title_bg" >

        <ImageButton
            android:id="@+id/ib_s00120_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen5dp"
            android:background="@color/clear"
            android:src="@drawable/selector_detail_back_btn" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/title_logo_img" />

            <TextView
                style="@style/common_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen15dp"
                android:text="우체통"
                android:textSize="@dimen/abc_action_bar_title_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <!-- LIST -->

    <ListView
        android:id="@+id/lv_s00120"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_s00120_title_bar"
        android:cacheColorHint="@color/clear"
        android:divider="#ffffffff"
        android:scrollingCache="false" />

</RelativeLayout>